# Mobile Security Agent - LangChain Architecture Environment Variables
# Copy this file to .env and configure with your actual API keys

# ====================================
# MobSF Configuration
# ====================================
MOBSF_API_URL=http://localhost:8000
MOBSF_API_KEY=your_mobsf_api_key_here
MOBSF_SCAN_TIMEOUT=1800

# ====================================
# AI Provider Configuration (Choose ONE)
# ====================================

# Option 1: OpenAI (Recommended)
AI_PROVIDER=openai
AI_MODEL_NAME=gpt-4
OPENAI_API_KEY=your_openai_api_key_here
# Optional: OpenAI organization ID
# OPENAI_ORGANIZATION=your_org_id

# Option 2: Anthropic (Alternative)
# AI_PROVIDER=anthropic
# AI_MODEL_NAME=claude-3-sonnet-20240229
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 3: Ollama (Local/Self-hosted)
# AI_PROVIDER=ollama
# AI_MODEL_NAME=llama2  # or any other Ollama model
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_API_KEY=your_ollama_api_key_here

# ====================================
# AI Analysis Configuration
# ====================================
AI_TEMPERATURE=0.1
AI_BATCH_SIZE=5
AI_ENABLE_MEMORY=true

# ====================================
# Report Configuration
# ====================================
REPORT_TEMPLATE_DIR=./templates
REPORT_OUTPUT_DIR=./reports
REPORT_AUTO_CLEANUP=true

# ====================================
# Vulnerability Analysis Configuration
# ====================================
MIN_SEVERITY_FILTER=low
ENABLE_DEDUPLICATION=true

# ====================================
# Logging Configuration
# ====================================
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log
LOG_CONSOLE=true

# ====================================
# LangGraph Workflow Configuration
# ====================================
WORKFLOW_PERSISTENCE=true
WORKFLOW_CHECKPOINT_PATH=./checkpoints/security_analysis.db

# ====================================
# Advanced Configuration
# ====================================
# Enable parallel scanning (experimental)
PARALLEL_SCANNING=false
MAX_CONCURRENT_SCANS=3

# ====================================
# Agent Configuration File
# ====================================
# Path to JSON configuration file (optional)
AGENT_CONFIG_FILE=./config.json
AGENT_ENV_FILE=./.env