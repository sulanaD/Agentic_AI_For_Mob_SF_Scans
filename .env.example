# Mobile Security Agent Configuration Example

# MobSF Configuration
MOBSF_API_URL=http://localhost:8000
MOBSF_API_KEY=your_mobsf_api_key_here
MOBSF_SCAN_TIMEOUT=1800

# AI Provider Configuration (choose one)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OLLAMA_API_KEY=your_ollama_api_key_here

# Agent Configuration
AI_PROVIDER=openai  # Options: openai, anthropic, groq, ollama
AI_MODEL_NAME=gpt-4
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=2000
AI_BATCH_SIZE=5
AI_ENABLE_MEMORY=true

# Ollama Configuration (if using ollama provider)
OLLAMA_BASE_URL=http://localhost:11434

# Analysis Configuration
PARALLEL_SCANNING=false
MAX_CONCURRENT_SCANS=3
MIN_SEVERITY_FILTER=low
ENABLE_DEDUPLICATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log
LOG_CONSOLE=true

# Report Configuration
REPORT_TEMPLATE_DIR=./templates
REPORT_OUTPUT_DIR=./reports
REPORT_AUTO_CLEANUP=true

# Workflow Configuration
WORKFLOW_PERSISTENCE=true
WORKFLOW_CHECKPOINT_PATH=./checkpoints/security_analysis.db
